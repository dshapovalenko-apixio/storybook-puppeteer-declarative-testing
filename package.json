{
  "name": "spdt",
  "version": "1.0.3",
  "description": "spdt stands for Storybook Puppeteer Declarative Testing. Declarative testing of isolated React components using storybook as a renderer and puppeteer+jest as a test runner",
  "main": "index.js",
  "bin": {
    "spdt:generate-story-index": "./bin/generate-story-index.js",
    "spdt:generate-test-index": "./bin/generate-test-index.js",
    "spdt:generate-tests": "./bin/generate-tests.js",
    "spdt:init": "./bin/init.js"
  },
  "scripts": {
    "lint": "eslint ./**/*.js",
    "flint": "eslint ./**/*.js  --fix",
    "test": "NODE_ENV=AVA ava",
    "test:cover": "nyc npm run test",
    "tc": "npm run test:cover"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sseletskyy/storybook-puppeteer-declarative-testing.git"
  },
  "keywords": [
    "testing",
    "e2e",
    "jest",
    "puppeteer",
    "storybook",
    "declarative",
    "test",
    "generator",
    "fixture",
    "chrome",
    "headless",
    "react"
  ],
  "author": "Serge Seletskyy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sseletskyy/storybook-puppeteer-declarative-testing/issues"
  },
  "homepage": "https://github.com/sseletskyy/storybook-puppeteer-declarative-testing#readme",
  "peerDependencies": {
    "react": "16.x",
    "@storybook/react": "4.x"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "fs": "^0.0.1-security",
    "monet": "^0.8.10",
    "path": "^0.12.7",
    "prompt": "^1.0.0",
    "puppeteer": "^1.7.0",
    "ramda": "^0.25.0",
    "shelljs": "^0.8.2"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-eslint": "8.1.2",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "eslint": "4.13.1",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-loader": "2.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.18.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-standard": "^3.1.0",
    "nyc": "^13.0.1",
    "prettier": "^1.14.2"
  },
  "ava": {
    "babel": "inherit",
    "concurrency": 2,
    "files": [
      "tests/**/*.ava.js"
    ],
    "verbose": true,
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "env",
      "react",
      "stage-0"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "parser": "babylon",
    "semi": false,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "jsxBracketSameLine": false
  }
}
